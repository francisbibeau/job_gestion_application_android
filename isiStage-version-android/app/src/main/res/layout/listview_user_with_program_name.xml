<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px"
    android:layout_marginTop="40px"
    android:background="@drawable/editext_shape"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="30px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lv_user_program_prenom"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:text="Aissata"
            android:textColor="#000"
            android:textSize="40px" />


        <TextView
            android:id="@+id/lv_user_program_nom"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="Ouattara"
            android:textColor="#000"
            android:textSize="40px" />

    </LinearLayout>

    <TextView
        android:id="@+id/lv_user_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programmation et technologie web"
        android:textColor="#000"
        android:textSize="40px" />

</LinearLayout>