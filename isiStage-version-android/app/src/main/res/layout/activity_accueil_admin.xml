<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AccueilAdminActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:background="@drawable/editext_shape"
        android:layout_marginTop="30px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/form_shape"
        android:layout_marginTop="40px"
        android:layout_marginBottom="50px"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_bonjour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonjour nomUser"
            android:textColor="#000"
            android:textSize="50px"
            android:layout_marginTop="50px"
            android:layout_gravity="center"
            android:layout_marginBottom="120px"
            />

        <Button
            android:id="@+id/btn_tous"
            android:layout_width="535px"
            android:layout_height="300px"
            android:text="Tous les etudiants"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:background="@color/btnGris"
            android:layout_marginBottom="70px"/>

        <Button
            android:id="@+id/btn_trouvee"
            android:layout_width="535px"
            android:layout_height="300px"
            android:text="Etudiants ayant trouvÃ©"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:background="@color/btnGris"
            android:layout_marginBottom="70px"/>


        <Button
            android:id="@+id/btn_etudiant_recherche"
            android:layout_width="535px"
            android:layout_height="300px"
            android:text="Etudiants en recherche"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:background="@color/btnGris"
            android:layout_marginBottom="170px"/>


        <Button
            android:id="@+id/btn_deconnexion"
            android:layout_width="535px"
            android:layout_height="130px"
            android:text="DECONNEXION"
            android:layout_gravity="center"
            android:textColor="#FFF"
            android:background="@drawable/btn_shape"/>
        


    </LinearLayout>

</LinearLayout>